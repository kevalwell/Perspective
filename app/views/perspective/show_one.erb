<h2><%= @cur_perspective.title %></h2>
<p><%= @cur_perspective.content %></p>
<ul class="comments">
  <% @cur_perspective.comments.each do |comment| %>
    <li>
      <h4><%= comment.title %></h4>
      <p><%= comment.content %></p>
        <div style="display: inline-block;">
          <a class="btn btn-info btn-xs" href="/comment/<%= comment.id %>" role="button">Edit</a>
        </div>
        <div style="display: inline-block;">
          <form action= "/perspective/<%= @cur_perspective.id %>/comment/<%= comment.id %>" method='post'>
            <input type='hidden' name='_method' value='delete' />
            <button type="submit" class="btn btn-danger btn-xs">Delete</button>
          </form>
        </div>
    </li>
    <% end %>
    <br>

    <h3>Add a Comment:</h3>

  <form action= "/perspective/<%= @cur_perspective.id %>/comments" method='post'>
    <input type='text' placeholder='title' name='title' /><br><br>
    <textarea cols="30" rows="5" placeholder='content' name='content'></textarea><br>

    <input type='submit' value='Add' />
  </form>
</ul>


